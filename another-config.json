{
  "scope": "Another Example",
  "version": "1.0.0",
  "retag": [
    {
      "search": ".title-1", 
      "replace": "h2"
    },
    {
      "search": ".title-2", 
      "replace": "h3"
    },
    {
      "search": "span.italic", 
      "replace": "strong"
    }
  ],
  "sanitize": [
    {
      "search": "span:not([class]):not([id])",
      "replace": "unwrap"
    },
    {
      "search": "p.text",
      "replace": "class"
    }
  ],
  "identify": [
    {
      "search": "h2", 
      "replace": "heading"
    },
    {
      "search": "h3", 
      "replace": "subheading"
    },
    {
      "search": "p", 
      "replace": "para"
    }
  ],
  "options": {
    "docLang": "it",
    "minifyCSS": true
  }
}