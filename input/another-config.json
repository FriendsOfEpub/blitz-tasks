{
  "scope": "Another",
  "version": "1.0.0",
  "retag": [
    {
      "search": ".image", 
      "replace": "figure"
    },
    {
      "search": ".caption", 
      "replace": "figcaption"
    },
    {
      "search": ".title-1", 
      "replace": "h2"
    },
    {
      "search": ".title-2", 
      "replace": "h3"
    },
    {
      "search": "span.italic", 
      "replace": "strong"
    }
  ],
  "sanitize": [
    {
      "unwrap": "h1 > b, h2 > b, span:not([class]):not([id])"
    },
    {
      "removeClass": ".title-1, .title-2"
    }
  ],
  "identify": [
    {
      "search": "figure", 
      "prefix": "fig"
    },
    {
      "search": "h2", 
      "prefix": "heading"
    },
    {
      "search": "h3", 
      "prefix": "subheading"
    },
    {
      "search": "p", 
      "prefix": "para"
    }
  ]
}